# Mobys API Configuration
# Copy this file to .env and fill in your actual values

# Core API Configuration
API_KEY=your_api_key_here
PROJECT_ID=mobys-api
MOBYS_API_KEY_SECRET=test_api_key_123

# Orange Money Configuration
# Get these from: https://developer.orange.com/apis/om-webpay
ORANGE_MONEY_BASE_URL=https://api.orange.com
ORANGE_MONEY_CLIENT_ID=your_orange_money_client_id
ORANGE_MONEY_CLIENT_SECRET=your_orange_money_client_secret
ORANGE_MONEY_MERCHANT_ID=your_orange_money_merchant_id
ORANGE_MONEY_WEBHOOK_SECRET=your_orange_money_webhook_secret
ORANGE_MONEY_ENVIRONMENT=sandbox
# ORANGE_MONEY_ENVIRONMENT=production

# Wave Configuration
# Get these from: https://docs.wave.com/business#requests
WAVE_BASE_URL=https://api.wave.com
WAVE_API_KEY=your_wave_api_key
WAVE_BUSINESS_ID=your_wave_business_id
WAVE_WEBHOOK_SECRET=your_wave_webhook_secret
WAVE_ENVIRONMENT=sandbox
# WAVE_ENVIRONMENT=production

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000
WEBHOOK_TIMEOUT=10000

# Environment
NODE_ENV=development
# SIMULATION_MODE=true  # Set to true to force simulation mode 